\usepackage{titlesec}

\titleformat{\section}
  {\large\sf\bfseries}{\thesection.}
  {8pt \@plus.2ex}{}[]

\titleformat{\subsection}
  {\sf\bfseries}{\thesubsection}
  {8pt \@plus.2ex}{}[]

\titleformat{\subsubsection}
  {\itshape}{\thesubsubsection}
  {8pt \@plus.2ex}{}[]

\titlespacing*{\section}
  {0pt}{2ex}{0pt}

\titlespacing*{\subsection}
  {0pt}{2ex}{0pt}

